<p id="notice"><%= notice %></p>

<h1>Owners</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sname</th>
      <th>Pesel</th>
      <th>Email</th>
      <th>Telefon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.sname %></td>
        <td><%= owner.pesel %></td>
        <td><%= owner.email %></td>
        <td><%= owner.telefon %></td>
        <td><%= link_to 'Show', owner, class: "btn btn-info btn-sm"%></td>
        <td><%= link_to 'Edit', edit_owner_path(owner), class: "btn btn-info btn-sm"%></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn btn-warning btn-sm w-50 ">
  <%= link_to 'New Owner', new_owner_path %>
</div>
