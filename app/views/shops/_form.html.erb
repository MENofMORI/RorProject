<%= form_with(model: shop, local: true) do |form| %>
  <% if shop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

      <ul>
        <% shop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="jumbotron col-md-6">
    <h4>Dodawanie Nowego sklepu :</h4><br>
    <div class="field card p-2 w-75">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'w-75'%><br><br>
      </div>

      <div class="field">
        Owner:
        <%= form.collection_select :owner_id, Owner.all, :id, :fname, class: 'w-50'%>
      </div>

      <div class="field ">
        Address:
        <%= form.collection_select :address_id, Address.all, :id, :faddress, class: 'w-50'%>
      </div>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-info btn-sm w-75'%>
    </div>
  </div>
<% end %>
