<p id="notice"><%= notice %></p>

<h1>Shops</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td>
          <% owner = Owner.find(shop.owner_id)%>
          <%= owner.fname %>
        </td>
        <td>
          <% address = Address.find(shop.address_id)%>
          <%= address.faddress %>
        </td>
        <td><%= link_to 'Show', shop, class: "btn btn-info btn-sm"%></td>
        <td><%= link_to 'Edit', edit_shop_path(shop), class: "btn btn-info btn-sm"%></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render partial: 'form', locals: {shop: Shop.new} %>
