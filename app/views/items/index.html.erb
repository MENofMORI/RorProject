<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Avilable in</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td>
          <% category = Category.find(item.category_id)%>
          <%= category.name %>
        </td>
        <td>
          <% item.shops.each do |g| %>
          <%= g.name %> <br>
          <% end %>
        </td>
        <td><%= link_to 'Details', item, class: "btn btn-info btn-sm"%></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render partial: 'form', locals: {item: Item.new} %>
